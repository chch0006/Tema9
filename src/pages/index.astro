    </footer>

    <style>
      p {
        max-width: 65ch;
        padding: 13px 10px 25px 0;
      }

      h1 {
        font-weight: 600;
      }

      h2 {
        font-weight: 550;
      }

      .find-ro-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 50px 30px 100px 30px;
        background-color: #f5f3f3;
      }

      .find-ro-section a {
        border: 2px solid black;
        border-radius: 30px;
        padding: 8px 25px;
        font-size: 0.8rem;
        margin-left: 10px;
        font-family: "Open Sans", sans-serif;
        font-size: 0.8rem;
        text-decoration: none;
        color: black;
        font-weight: 600;
        display: inline-block;
      }

      img {
        width: 400px;
        padding-bottom: 30px;
      }

      .hvorfor-section {
        padding: 120px 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
      }

      .hvorfor-section h2 {
        padding-bottom: 30px;
        font-weight: 600;
      }

      .virker-section {
        background-color: #f5f3f3;
        padding: 120px 30px;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
      }

      .virker-section p {
        padding-bottom: 60px;
      }

      .vores-løsninger-section h2 {
        text-align: center;
      }

      .vores-løsninger-section {
        padding: 120px 30px;
      }

      .knap2 {
        background-color: #3d1112;
        padding: 10px 100px;
        color: white;
        text-decoration: none;
        font-family: "Open Sans", sans-serif;
        font-size: 0.8rem;
        border-radius: 15px;
        align-self: center;
      }

      .tittel {
        border-bottom: 1px solid black;
        padding-bottom: 10px;
      }

      .vores-løsninger-afsnit {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        padding-top: 80px;
      }

      .packages {
        background-color: #c6d5d7;
        padding: 2rem;
        border-radius: 1rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .hvem-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        padding: 50px 30px 100px 30px;
        background-color: #cec4c3;
      }

      .hvem-section p {
        padding-bottom: 50px;
      }

      @media screen and (min-width: 800px) {
        .find-ro-section {
          display: grid;
          grid-template-columns: 1fr 1fr;
          align-items: center;
          text-align: left;
          gap: 250px;
          padding: 120px 120px;
        }

        .find-ro-section .tekst {
          order: 1;
        }

        .find-ro-section .billede {
          order: 2;
        }

        .hvorfor-tekst {
          display: grid;
          grid-template-columns: 1fr 1fr 1fr;
          gap: 70px;
          padding: 0 30px;
        }

        .hvorfor-tekst p {
          max-width: 35ch;
        }

        .virker-section {
          display: grid;
          grid-template-columns: 1fr 1fr;
          align-items: center;
          text-align: left;
          gap: 250px;
          padding: 120px 120px;
        }
        .virker-section .tekst {
          order: 2;
        }

        .virker-section .billede {
          order: 1;
        }

        .hvem-section {
          display: grid;
          grid-template-columns: 1fr 1fr;
          align-items: center;
          text-align: left;
          gap: 250px;
          padding: 120px 120px;
        }

        .hvem .tekst {
          order: 1;
        }

        .hvems .billede {
          order: 2;
        }
      }
    </style>
  </body>
</html>
